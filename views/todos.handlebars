<h3>Incomplete Tasks</h3>

{{!-- TODO: SHOW THE CURRENT LIST OF TODOS AND GIVE THE USER THE ABILITY TO CLOSE OUT A TASK --}}
<ul>
    {{#each incompleteTodos}}
        <li>
            {{this.task}}
            <form action="/completed" method="post">
                <button name="id" value="{{this.id}}" type="submit">Done</button>
            </form>
        </li>
    {{/each}}
</ul>
